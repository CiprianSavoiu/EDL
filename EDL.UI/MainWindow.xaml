<Window x:Class="EDL.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EDL.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid MouseUp="Grid_MouseUp">
        <ComboBox x:Name="CountriesCmbx" HorizontalAlignment="Left" Margin="60,50,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
        <Label Content="Countries" HorizontalAlignment="Left" Margin="60,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="60,95,0,0" VerticalAlignment="Top" Width="75" Click="BtnSubmit_Click"/>

    </Grid>
</Window>
